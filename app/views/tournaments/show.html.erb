<div class="well">

<div class="container-fluid">
  <div class="clearfix">
    <div class="col-md-12 tournament_name">
      <h2><%= @tournament.tournament_name %></h2>
    </div>

    <div class="col-md-12 tournament_banner">
      <%= image_tag @tournament.tournament_banner %>
    </div>
  </div>

</div>

<div class="container-fluid">
    <div class="row">
      <div class="col-md-4">
        <ul><h4>Tournament Info</h4>
          <li>Start Date: <%= @tournament.tournament_start%></li>
          <li>End Date: <%=@tournament.tournament_end %></li>
          <li>Type: <%= @tournament.tournament_type %></li>
          <li>Max Entrants: <%= @tournament.max_teams %></li>
        </ul>
      </div>
      <div class="col-md-4">
        <h4>Tournament Description</h4>
        <%= @tournament.tournament_description %></li>
      </div>
      <div class="col-md-4">
        <ul><h4>Registered Teams</h4>
          <% @tournament.registrations.each do |registration| %>
            <% team = Team.find(registration.team_id) %>
          <li> <%= link_to team.team_name, team_path(team) %></li>
          <% end %>
        </ul>
      </div>
    </div>
</div>

</div>

<% if current_user %>
<div class="options">
  <div class="tournament_edit">
    <%= link_to "Edit Tournament", edit_tournament_path%>
  </div>
  <div class="registrations">
    <%= link_to "View Registrations", tournament_registrations_path(@tournament)%>
  </div>
</div>
<% end %>
