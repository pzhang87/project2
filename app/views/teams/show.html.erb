<div class="well">
<div class="row">
  <div class="col-md-6 team_logo"><%=image_tag @team.team_logo%></div>

<div class="col-md-6 team_name"><h2><%= @team.team_name %></h2></div>

<div class="col-md-6"><%=@team.team_description%></div>
<div class="col-md-6">
  <h4>Members</h4>
    <ul>
      <% @memberships.each do |membership|%>
        <% user = User.find(membership.user_id) %>
        <li><%=user.email%></li>
      <% end %>
    </ul>
  <% if current_user %>
    <div class="team_edit"><%= link_to "Edit Team", edit_team_path%></div>
    <div class="add_member"><%= link_to "Add Member", new_team_membership_path(@team)%></div>
  <% end %>
</div>
</div>
